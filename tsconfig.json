{
    "include": ["./source/**/*"],
    "compilerOptions": {
      "incremental": false,
      "target": "ES2021",
      "module": "commonjs",
      "declaration": false,
      "sourceMap": true,
      "resolveJsonModule": true,
      "outDir": "build",
      "rootDir": "source",
      "removeComments": true,
      "strict": true,
      "skipLibCheck": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "noUncheckedIndexedAccess": true,
    },
  //   "exclude": [
  //   "node_modules",
  //   "build",
  //   "coverage",
  //   "**/*.test.ts",
  //   "**/*.spec.ts"
  // ]
}
